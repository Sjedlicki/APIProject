@model IEnumerable<MovieAPI.Models.MovieDB>
<link rel="stylesheet" href="../../Content/Favorites.css">
@{
    ViewBag.Title = "Favorites";
}

<link rel="stylesheet" href="../../Content/Favorites.css">

<h2>Favorites</h2>

<form action="~/Home/Index" id="button">
    <input type="submit" class="button" value="Home"/>
</form>

<div id="DeleteFav">@Html.ActionLink("Delete All", "DeleteAll", new { @id = "DeleteFav" })</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Metascore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plot)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Poster)" id="thumb" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metascore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plot)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.ID })
            </td>
        </tr>
    }
</table>
