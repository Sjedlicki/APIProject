@model MovieAPI.Models.MovieModel
@using MovieAPI.Models;

@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <label for="Title" class="form-control">Search by title</label>
    @Html.TextBox("Title", null, new { @class = "form-control" })
    <input type="submit" class="form-control" />
}
<p>Movie Count: @Model.Movies.Count</p>
@foreach (MovieDB item in Model.Movies)
{
    <div class="form-group">
        <p>Title: @item.Title</p>
        <p>Year: @item.Year</p>
        <p>Genre: @item.Genre</p>
        <p>Rating: @item.Metascore</p>
        <p>Poster: <img src="@item.Poster" /></p>
        <p>Plot: @item.Plot</p>
    </div>

    <a href="/MovieDBs/Favorites?ImdbID=@item.ImdbID">Add to Favorites</a>
}