@model MovieAPI.Models.MovieModel
@using MovieAPI.Models;

<link rel="stylesheet" href="../../Content/Index.css">
@using (Html.BeginForm("Search", "Home", FormMethod.Post))
{
    <label for="Title" class="form-control">Search by title</label>
    @Html.TextBox("Title", null, new { @class = "form-control" })
    <input type="submit" class="form-control" />
}

<p>Movie Count: @Model.Movies.Count</p>
@foreach (MovieDB item in Model.Movies)
{
    <div class="info">
        <p><img src="@item.Poster" id="movieposter"/></p>
        <p>Title: @item.Title</p>
        <p>Year: @item.Year</p>
        <p>IMDB ID: @item.ImdbID</p>
    </div>
}
